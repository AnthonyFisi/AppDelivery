<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.VentaUI.FragmentRegistroVenta">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:elevation="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        app:titleTextColor="@android:color/transparent"
        app:navigationIcon="@drawable/ic_action_name_back"/>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Titulo1_Carrito"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Confirmar pedido" />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            app:cardElevation="0dp"
                            app:cardCornerRadius="30dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp">

                            <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/restaurante"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/nombre_empresa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            style="@style/Titulo1_Carrito"
                            android:text="Nombre del restaurante" />

                        <TextView
                            android:id="@+id/direccion_empresa"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            style="@style/Titulo2_Carrito"
                            android:text="Nombre del restaurante" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/Titulo1_Carrito"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Metodo de pago" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView_method_pay"
                            android:src="@drawable/dinero"
                            android:layout_marginStart="16dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <TextView
                            android:id="@+id/registro_venta_TIPO_PAGO"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/Titulo2_Carrito"
                            android:text="Efectivo"
                            android:gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/registro_venta_EDITAR_TIPO_PAGO"
                                android:gravity="center"
                                android:layout_marginEnd="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:background="@drawable/ic_action_arrow_right"
                                    android:backgroundTint="@color/subtitulolight"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>

                            </LinearLayout>




                        </LinearLayout>



                    </LinearLayout>


                    <View
                        android:background="@color/backgroundlight"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Titulo1_Carrito"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Ubicacion" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/registro_venta_UBICACION"
                        style="@style/Titulo2_Carrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="Av 26 noviembre 1554 paradero 8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="end"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/check_comentario_ubicacion"
                            android:background="@drawable/ic_action_check"
                            android:backgroundTint="@color/green"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/registro_venta_COMENTARIOS_UBICACION"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Titulo2_Carrito"
                            android:hint="Ejm : Casa de dos pisos"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="20dp" />


                        <LinearLayout
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/anadir_COMENTARIO_UBICACION"
                                android:gravity="center"
                                android:layout_marginEnd="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:background="@drawable/ic_action_arrow_right"
                                    android:backgroundTint="@color/subtitulolight"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/backgroundlight"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Titulo1_Carrito"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Numero de celular " />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:orientation="horizontal">






                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/registro_venta_CELULAR_ACTUAL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Titulo2_Carrito"
                        android:hint="Ejm: 999 999 999"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/check_comentario_celular"
                        android:background="@drawable/ic_action_check"
                        android:backgroundTint="@color/green"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/registro_venta_CELULAR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Titulo2_Carrito"
                        android:hint="Ejm: 999 999 999 "
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp" />

                    <LinearLayout
                        android:id="@+id/registro_venta_EDITAR_CELULAR"
                        android:gravity="end"
                        android:layout_marginEnd="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/ic_action_arrow_right"
                            android:backgroundTint="@color/subtitulolight"
                            android:layout_width="15dp"
                            android:layout_height="15dp"/>

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>
            <View
                android:background="@color/background"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/Titulo1_Carrito"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Tiempo de entrega" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/registro_venta_TIEMPO_APROXIMADO"
                        style="@style/Titulo2_Carrito"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:text="40 min" />
                </LinearLayout>


            </LinearLayout>
            <View
                android:background="@color/backgroundlight"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Titulo1_Carrito"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:text="Comentario" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/check_comentario_pedido"
                        android:background="@drawable/ic_action_check"
                        android:backgroundTint="@color/green"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/registro_venta_COMENTARIOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Titulo2_Carrito"
                        android:hint="Ejm : Poner mas salsa al plato"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp" />

                    <LinearLayout
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/registro_venta_EDITAR_COMENTARIO"
                            android:gravity="center"
                            android:layout_marginEnd="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:background="@drawable/ic_action_arrow_right"
                                android:backgroundTint="@color/subtitulolight"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:background="@color/backgroundlight"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/Titulo1_Carrito"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Fecha de entrega" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/registro_venta_FECHA_ENTREGA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Titulo2_Carrito"
                        android:text="Jueves 24 de noviembre, 8:00 pm -9:00 pm"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp" />


                </LinearLayout>

            </LinearLayout>
            <View
                android:background="@color/backgroundlight"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>



            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <TextView
                        style="@style/Titulo1_Carrito"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Precio" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/Titulo2_Carrito"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pedido" />

                    <LinearLayout
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_marginEnd="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/Titulo2_Carrito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="S/" />
                        <TextView
                            android:id="@+id/registro_venta_SUB_TOTAL"
                            style="@style/Titulo2_Carrito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 10.00" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_marginStart="16dp"
                        style="@style/Titulo2_Carrito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery" />

                    <LinearLayout
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_marginEnd="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Titulo2_Carrito"
                            android:layout_marginStart="2dp"
                            android:text="S/" />
                        <TextView
                            android:id="@+id/registro_venta_COSTO_DELIVERY"
                            style="@style/Titulo2_Carrito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 10.00" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/cardview_shadow_start_color"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/Titulo1_Carrito"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Total" />

                    <LinearLayout
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_marginEnd="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/Titulo1_Carrito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:layout_marginStart="2dp"
                            android:text="S/" />
                        <TextView
                            android:id="@+id/registro_venta_COSTO_TOTAL"
                            style="@style/Titulo1_Carrito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="S/ 10.00" />

                    </LinearLayout>



                </LinearLayout>



                <Button
                    android:id="@+id/registro_venta_REGISTRAR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_button_general"
                    android:text="Enviar pedido"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />



            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>