<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.ProductDetailUI.CarritoFragment">

    <LinearLayout
        android:id="@+id/bottomNavigationView"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:gravity="center">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/layout_CARRITO_ADD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner_empresa_3"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageButton
                    android:id="@+id/disminuir_producto_detail"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_check_remove" />

                <TextView
                    android:id="@+id/cantidad_producto_detail"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/avanti_normal"
                    android:gravity="center"
                    android:text="20"
                    android:textSize="24sp" />


                <ImageButton
                    android:id="@+id/incrementar_producto_detail"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_check_add" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_producto_disponible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transparent_background_restaurante"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    style="@style/Titulo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agotado"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_product_detail_CARRITO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@drawable/border_button_general">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">



              <!--  <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#7fFFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                    <ImageView
                        android:background="@drawable/ic_action_wcheck"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                </androidx.cardview.widget.CardView>

-->
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Comprar"
                    style="@style/Titulo3"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/activity_product_detail_CARRITO_CANTIDAD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="productos"
                        android:layout_marginStart="4dp"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:background="@drawable/ic_action_arrow_right"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</FrameLayout>