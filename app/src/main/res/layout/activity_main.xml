<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".MainActivity">


    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="380dp"
        android:layout_height="31dp"
        android:layout_below="@+id/imagen_bar"
        android:layout_marginStart="12dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/rounded_corner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearlayout_bar"
        android:layout_width="191dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:layout_toStartOf="@+id/imagen_bar2"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/imagen_bar2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ubicacion"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            android:text="Villa maria del triunfo"
            android:textColor="#F2F2F2">

        </TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imagen_bar"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_below="@+id/linearlayout_bar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="128dp"
        android:layout_toStartOf="@+id/imagenButtom_bar"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toStartOf="@+id/imagenButtom_bar"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_bar"
        tools:ignore="MissingConstraints">

    </ImageView>



    <ImageButton
        android:id="@+id/imagenButtom_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imagen_bar2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        android:background="@color/cardview_light_background"
        android:src="@drawable/perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen_bar2"
        tools:ignore="ContentDescription,MissingConstraints">

    </ImageButton>

    <ImageButton
        android:id="@+id/imagen_bar2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="32dp"
        android:background="@color/cardview_light_background"
        android:src="@mipmap/ic_launcher_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints">

    </ImageButton>


    <Button
        android:id="@+id/button_login"
        android:layout_width="379dp"
        android:layout_height="35dp"
        android:layout_below="@+id/search_bar"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>